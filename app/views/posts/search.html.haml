.wrapper
  .footer-top
    = form_with(url: search_posts_path, local: true, method: :get, class: "search__form") do |form|
      = form.text_field :keyword, placeholder: "検索", class: "search__form__input"
      = form.submit "検索", class: "search__form__btn"




  .search__content
    .search__topics
      - @posts.each do |post|
        = link_to post_path(post.id), class: "content__topic__lists a" do
          = image_tag(post.image.to_s)
          
  .search-footer
    = link_to "トップへ戻る", root_path, class: "search-footer__btn"
    